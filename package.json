  "description": "crypton-studio project",
  "scripts": {
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "build": "npm run clean && npm run compile",
    "node": "npx hardhat node",
    "deploy": "npx hardhat run scripts/deploy.ts --network rinkeby",
    "coverage": "npx hardhat coverage",
    "verify": "npx hardhat verify --network rinkeby",
    "test": "npx hardhat test",
    "prettier": "npx prettier --write contracts/**/*.sol",
    "solhint": "solhint contracts/**/*.sol",
    "check": "npm run prettier && npm run solhint"
  },
  "author": "",
